{
  "name": "airpost",
  "version": "1.0.0",
  "description": "一个跨平台的Electron应用",
  "main": "dist-electron/main.js",
  "type": "module",
  "engines": {
    "node": ">=18.12.0"
  },
  "scripts": {
    "dev": "tsc -p electron/tsconfig.json && concurrently \"vite\" \"tsc -p electron/tsconfig.json --watch\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder",
    "build:win": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder --win",
    "build:mac": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder --mac",
    "build:linux": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder --linux",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "desktop",
    "app",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "antd": "^5.12.8",
    "better-sqlite3": "^9.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.airpost.app",
    "productName": "AirPost",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "database",
        "to": "database",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.utility"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
